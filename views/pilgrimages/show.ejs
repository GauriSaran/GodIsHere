<% include ../partials/header %>
<div class = "container">
    <div class = "row">
        <div class = "col-md-3">
            <p class = "lead">God Is Here</p>
            <div class = "list-group">
                <li class = "list-group-item active">Info 1</li>
                <li class = "list-group-item">Info 2</li>
                <li class = "list-group-item">Info 3</li>
            </div>
        </div>
        <div class = "col-md-9">
            <div class = "thumbnail">
                <img class = "img-responsive" src = "<%= pilgrimage.image%>">
                <div class = "caption-full">
                    <h4><a><strong><%= pilgrimage.name %> </strong><</a></h4>
                    <p><%= pilgrimage.description %></p>
                    <p>Submitted by <%= pilgrimage.author.username %></p>
                    <% if(currentUser && pilgrimage.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning btn-sm" href="/pilgrimages/<%= pilgrimage._id%>/edit">Edit</a>
                        <form class="delete-form" action="/pilgrimages/<%=pilgrimage._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                   <% } %>
                    
                </div>
            </div>
            <div class = "well">
                <div class = "text-right">
                        <a class = "btn btn-success" href = "/pilgrimages/<%=pilgrimage._id%>/comments/new">Add New comment</a>
                 </div>
                 <hr>
                <% pilgrimage.comments.forEach(function(comment){ %>
                    <div class = "row">
                        <div class = "col-md-12">
                            <strong> <%= comment.author.username %> </strong>
                                <span class = "pull-right">10 days ago</span>
                                <p><%= comment.text %> </p>
                                <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                    <a class="btn btn-xs btn-warning" href="/pilgrimages/<%=pilgrimage._id%>/comments/<%=comment._id%>/edit">Edit</a>
                                    <form class="delete-form" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                    <input class="btn btn-xs btn-danger" type="submit" value="Delete">
                                </form>
                               <% } %>
                        </div>
                    </div>
                        
                         
                <% }) %>
            </div>
        </div>
    </div>
</div>










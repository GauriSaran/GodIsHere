<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style = "text-align: center">Share A New Pilgrimage</h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/pilgrimages" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="c">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class = "form-group">
                    <textarea name = "description">Enter Description</textarea>
                </div>
                <div class="form-group">
                    <button  class = "btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href= "/pilgrimages">Go back</a>
        </div>
    </div>
</div>

